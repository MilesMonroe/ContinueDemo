<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_select"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    OKhttp测试项    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tv_background_shape"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35dp"
            android:text="3_文件选择测试项"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="#008577"
            />
        <!--去除输入法弹框-->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/bt_file_sel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="file_sel"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
<!--            &lt;!&ndash;去除输入法弹框&ndash;&gt;-->
<!--            <LinearLayout-->
<!--                android:layout_width="0px"-->
<!--                android:layout_height="0px"-->
<!--                android:focusable="true"-->
<!--                android:focusableInTouchMode="true" />-->

            <EditText
                android:id="@+id/ed_showfilepath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:hint="显示选择的文件路径"
                android:textColorHint="#999999"
                android:maxWidth="100dp"
                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>