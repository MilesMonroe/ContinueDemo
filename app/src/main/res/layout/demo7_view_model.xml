<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tv_background_shape"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35dp"
            android:text="7_ViewModel测试项"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="#008577"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#222222"
            android:layout_gravity="clip_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/bt_viewmodel_test1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="bt_viewmodel未使用时的平常演示"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
            <Button
                android:id="@+id/bt_viewmodel_test2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="bt_viewmodel使用时的演示"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/bt_lambda_test"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="bt_lambda简写测试"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
            <Button
                android:id="@+id/bt_viewmodel_test4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="bt_预留"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>