<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
<!--            android:text="5_DataBinding测试项"-->
            <TextView
                android:id="@+id/tv_viewmodel_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="35dp"
                android:text="非ViewModel时的异常展示"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_viewmodel_activity_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="35dp"
                android:text="当前点击量:0"
                android:textStyle="bold"
                android:background="@drawable/tv_background_shape"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center"
                >
                    <Button
                        android:id="@+id/bt_viewmodel_activity_test1"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:text="按钮1"
                        android:textSize="20dp"
                        android:gravity="left"
                        android:layout_margin="26dp"
                        android:background="@drawable/ic_check_black_24dp"
                        />

                    <Button
                        android:id="@+id/bt_viewmodel_activity_test2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按钮2"
                        android:textSize="20dp"
                        android:gravity="left"
                        android:layout_margin="26dp"
                        android:background="@drawable/ic_close_black_24dp"
                        />
            </LinearLayout>

        </LinearLayout>
</layout>