            android:layout_margin="16dp"
        />

        <!--    3_文件选择器测试项    -->
        <com.example.log_catcher.test_demo.test3_file_select.FileSelect
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            />

        <!--    4_xml解析    -->
        <com.example.log_catcher.test_demo.test4_xml_json.XmlJasonParseTest
            android:id="@+id/layout_file_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            />

        <!--    5_DataBinding Test    -->
        <com.example.log_catcher.test_demo.test5_databinding.DataBindingTest
            android:id="@+id/databinding_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            />

        <!--    6_Rxjava Test    -->
