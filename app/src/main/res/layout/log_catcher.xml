        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp"
            >
            <TextView
                android:id="@+id/sample_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前时间:"
                android:textSize="30dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/ed_now_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_background_shape"
                android:focusable="false"
                android:hint=" now time"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30dp"
                />
        </LinearLayout>

        <!--    1_服务测试项    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/tv_background_shape"
            android:layout_margin="26dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="35dp"
                android:text="1_服务测试项"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="#008577"
                />

            <Button
                android:id="@+id/bt_start_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bt_start_service"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
            <Button
                android:id="@+id/bt_stop_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bt_stop_service"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
            <Button
                android:id="@+id/bt_bind_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bt_bind_service"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />

            <Button
                android:id="@+id/bt_unbind_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="20dp"
                android:gravity="left"
                android:text="bt_unbind_service" />

            <Button
                android:id="@+id/bt_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bt_debug"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_margin="6dp"
                />
        </LinearLayout>

        <!--    2_OKhttp测试项    -->
        <com.example.log_catcher.test_demo.test2_okhttp_xml_jason.Okhttp4Demo
            android:layout_width="match_parent"
